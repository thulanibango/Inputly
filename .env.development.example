# Development environment variables
# App
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=dev_super_secret_change_me
JWT_EXPIRES_IN=7d

# Arcjet (optional, for security middleware)
ARCJET_KEY=replace_with_arcjet_key

# Neon Local proxy configuration
# Required by docker-compose.dev.yml to create ephemeral branches
NEON_API_KEY=replace_with_neon_api_key
NEON_PROJECT_ID=replace_with_neon_project_id
# Optional: parent branch id; leave empty to default or set from Neon console
PARENT_BRANCH_ID=

# Database connection for app inside Docker Compose network
# Using Neon Local proxy service hostname `neon-local`
# Username and password are `neon:npg` as per Neon Local docs
DATABASE_URL=postgres://neon:npg@neon-local:5432/app?sslmode=require
