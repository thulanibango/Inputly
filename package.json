{
  "name": "inputly",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "imports": {
    "#src/*": "./src/*",
    "#config/*": "./src/config/*",
    "#utils/*": "./src/utils/*",
    "#app/*": "./src/app/*",
    "#models/*": "./src/models/*",
    "#routes/*": "./src/routes/*",
    "#controllers/*": "./src/controllers/*",
    "#middleware/*": "./src/middleware/*",
    "#services/*": "./src/services/*",
    "#validations/*": "./src/validations/*"
  },
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev:docker": "sh ./src/scripts/dev.sh",
    "prod:docker": "sh ./src/scripts/prod.sh",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "k8s:setup": "bash ./src/scripts/minikube-setup.sh",
    "k8s:build": "bash ./src/scripts/build-images.sh",
    "k8s:deploy": "bash ./src/scripts/deploy-minikube.sh",
    "k8s:quick-deploy": "bash ./src/scripts/quick-kubernetes-deploy.sh",
    "k8s:destroy": "cd infra/terraform && terraform init -backend=false && terraform destroy -auto-approve",
    "k8s:port-forward": "kubectl port-forward svc/inputly-frontend-service 8080:80 & kubectl port-forward svc/inputly-api-service 8081:3000 &",
    "k8s:stop-forward": "pkill -f 'kubectl port-forward'",
    "k8s:status": "kubectl get pods,svc,ingress",
    "k8s:logs": "kubectl logs deployment/inputly-api -f",
    "k8s:logs-frontend": "kubectl logs deployment/inputly-frontend -f",
    "k8s:restart": "kubectl rollout restart deployment/inputly-api && kubectl rollout restart deployment/inputly-frontend",
    "k8s:scale": "kubectl scale deployment inputly-api --replicas=2",
    "setup:environment": "bash ./src/scripts/setup-local-environment.sh",
    "setup:prerequisites": "bash ./src/scripts/install-prerequisites.sh",
    "setup:quick": "bash ./src/scripts/quick-start.sh",
    "monitoring:setup": "bash ./scripts/setup-grafana-host.sh",
    "monitoring:port-forward": "kubectl -n monitoring port-forward svc/kube-prometheus-stack-grafana 80:80",
    "monitoring:deploy": "bash ./scripts/deploy-monitoring.sh",
    "monitoring:troubleshoot": "bash ./scripts/troubleshoot-monitoring.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thulanibango/Inputly.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/thulanibango/Inputly/issues"
  },
  "homepage": "https://github.com/thulanibango/Inputly#readme",
  "dependencies": {
    "@arcjet/inspect": "^1.0.0-beta.11",
    "@arcjet/node": "^1.0.0-beta.11",
    "@neondatabase/serverless": "^1.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
