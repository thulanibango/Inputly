# Production environment variables
# App
PORT=3000
NODE_ENV=production

# JWT
JWT_SECRET=prod_super_secret_change_me
JWT_EXPIRES_IN=7d

# Security (optional)
ARCJET_KEY=replace_with_arcjet_key

# Database: Use Neon Cloud database URL (no Neon Local in production)
# Format: postgres://<user>:<password>@<host>.<region>.neon.tech/<dbname>?sslmode=require
DATABASE_URL=postgres://user:password@your-project-name.region.neon.tech/dbname?sslmode=require
